<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Numeric_Only</fullName>
    <active>true</active>
    <errorConditionFormula>NOT( REGEX( Phone__c , &quot;^[0-9]*$&quot;) )</errorConditionFormula>
    <errorMessage>Phone must be a number</errorMessage>
</ValidationRule>
